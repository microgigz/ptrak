
<%= content_for :header do %>

  <%= stylesheet_link_tag 'projects/non_stories_view' %>
  <%= javascript_include_tag "features/ga" %>
  <%= javascript_include_tag "projects/non_stories_view_prod-release-20111025-20111221-3_pkg" %>
  <script type="text/javascript">
    //<![CDATA[
    window._gaq = window._gaq || [];
    window._gaq.push(['_setAccount', 'UA-1687866-3']);
    window._gaq.push(['_trackPageview']);
